{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es6", "dom", "dom.iterable", "es2016", "es2015.promise", "scripthost"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "lib-exec",
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "jsx": "react",
    "baseUrl": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["webpack-env", "node"]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.js",
    "*.tsx",
  ],
  "exclude": [
    "node_modules/**",
  ]
}
